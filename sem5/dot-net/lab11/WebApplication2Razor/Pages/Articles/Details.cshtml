@page
@model WebApplication2Razor.Pages.Articles.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />
    <div>
        <div class="form-group">
            <label>Name</label>
            <p>@Model.Article.Name</p>
        </div>
        <div class="form-group">
            <label>Price</label>
            <p>@Model.Article.Price</p>
        </div>
        <div class="form-group">
            <label>Category</label>
            <p>@Model.Article.Category.Name</p>
        </div>
        <div class="form-group">
            <label>Image</label>
            <img src="@Url.Content("~/uploads/" + (Model.Article.ImagePath ?? "placeholder.png"))" alt="Article Image" class="img-fluid" />
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Article.Id">Edit</a> |
            <a asp-page="./Delete" asp-route-id="@Model.Article.Id">Delete</a> |
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>
